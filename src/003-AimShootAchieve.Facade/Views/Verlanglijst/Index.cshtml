@model IEnumerable<Verlanglijst>

@{
    ViewData["Title"] = "Index";
}

<h2>Mijn verlanglijstje</h2><hr />

<p>
    <a class="btn btn-default" asp-action="Aanmaken">Nieuwe verlanglijst</a>        
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>   
            <th>
                @Html.DisplayNameFor(model => model.Prive)
            </th>    
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prive)
                </td>
                <td>
                    <a asp-action="Aanpassen" asp-route-id="@item.Id">Wijzig</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Verwijderen" asp-route-id="@item.Id">Verwijder</a>
                </td>
            </tr>
        }
    </tbody>
</table>
