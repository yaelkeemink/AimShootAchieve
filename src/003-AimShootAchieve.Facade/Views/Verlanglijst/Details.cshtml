@model Verlanglijst

@{
    ViewData["Title"] = "Index";
}

<h2>@Model.Naam verlanglijstje</h2><hr />

<p>
    <a class="btn btn-default" asp-action="index">Terug</a>
    <a class="btn btn-default" asp-action="WensToevoegen" asp-route-id="@Model.Id">Nieuwe wens</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VerlanglijstItems.FirstOrDefault().Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerlanglijstItems.FirstOrDefault().Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerlanglijstItems.FirstOrDefault().Prive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerlanglijstItems.FirstOrDefault().Winkel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerlanglijstItems.FirstOrDefault().Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerlanglijstItems.FirstOrDefault().Prive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VerlanglijstItems)
        {
            @Html.HiddenFor(a => a.Id)
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Omschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prijs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Winkel)
                </td>
                <td>
                    @if (item.Link != "" && item.Link != null)
                    {
                        <a href="@item.Link" target="_blank">klik mij</a>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prive)
                </td>
                <td>
                    <a asp-action="WensAanpassen" asp-route-id="@item.Id">Wijzig</a> |
                    <a asp-action="VerwijderWens" asp-route-id="@item.Id">Verwijder</a>
                </td>
            </tr>
        }
    </tbody>
</table>