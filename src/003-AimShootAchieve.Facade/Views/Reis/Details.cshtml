@model ReisViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details voor @Html.DisplayFor(model => model.Naam)</h2><hr />

<div class="detailContainer">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ReisStatus)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReisStatus)
        </dd>
        <dt>
            Aankomst datum
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AankomstDatum)
        </dd>
        <dt>
            Vertrek datum
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VertrekDatum)
        </dd>
        <dt>
            Bestemmingen
        </dt>
            @Html.EditorFor(a => a.Landen)        
    </dl>
</div>
<div>
    <a class="btn btn-default" asp-action="Index">Terug</a> |
    <a class="btn btn-default" asp-action="Aanpassen" asp-route-id="@Model.Id">Aanpassen</a> |
    <a class="btn btn-default" asp-action="LandToevoegen" asp-route-id="@Model.Id">Bestemming toevoegen</a>
</div>