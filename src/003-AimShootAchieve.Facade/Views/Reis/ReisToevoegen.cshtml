@model Reis

<form method="post" asp-action="ReisToevoegen">
    <div class="form-horizontal">
        <h4 class="pageHeader">Reis Toevoegen</h4><hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        @Html.HiddenFor(a => a.ReisStatus)
        <div class="form-group">
            <label asp-for="Naam" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AankomstDatum" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="AankomstDatum" class="form-control" />
                <span asp-validation-for="AankomstDatum" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VertrekDatum" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="VertrekDatum" class="form-control" />
                <span asp-validation-for="VertrekDatum" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Prive" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Prive" class="form-control" />
                <span asp-validation-for="Prive" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    <a class="btn btn-default" asp-action="Index">Terug</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}