@model LijstItem
@Html.HiddenFor(a => Model.Id)
@Html.HiddenFor(a => Model.LijstId)
@Html.HiddenFor(a => a.Naam)
<dd>
    <div class="list-item-container">
        <article>
            @Html.CheckBoxFor(a => Model.Gedaan)
            @Html.DisplayFor(a => Model.Naam)
        </article>
        <a asp-controller="Lijst" asp-action="LijstItemVerwijderen" asp-route-id="@Model.Id" class="btn btn-default">Verwijderen</a>
    </div>
</dd>