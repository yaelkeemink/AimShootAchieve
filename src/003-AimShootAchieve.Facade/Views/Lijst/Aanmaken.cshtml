@model AddLijstItemViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Maak een nieuwe lijst</h2><hr />

<form asp-action="Aanmaken">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Naam" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Wens1" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Wens1" class="form-control" />
                <span asp-validation-for="Wens1" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Wens2" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Wens2" class="form-control" />
                <span asp-validation-for="Wens2" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Wens3" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Wens3" class="form-control" />
                <span asp-validation-for="Wens3" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Wens4" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Wens4" class="form-control" />
                <span asp-validation-for="Wens4" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Wens5" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Wens5" class="form-control" />
                <span asp-validation-for="Wens5" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aanmaken" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Terug naar lijsten</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
