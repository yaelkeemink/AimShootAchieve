@model LijstItem

@{
    ViewData["Title"] = "Create";
}

<h2>Item toevoegen</h2><hr />

<form asp-action="LijstItemToevoegen">
    <div class="form-horizontal">
        @Html.HiddenFor(a => a.LijstId)
        @Html.HiddenFor(a => a.UserId)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Naam" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Toevoegen" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Details" asp-route-id="@Model.LijstId">Terug naar lijsten</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
