@model Lijst
<form asp-action="Update" method="post">
    <h2>@Html.DisplayFor(model => model.Naam)</h2><hr />
    <div>
        <dl>
            <dd>
            </dd>
            @Html.HiddenFor(a => Model.LijstId)
            @Html.HiddenFor(a => Model.Naam)
            @Html.EditorFor(a => a.Items)
        </dl>
    </div>
    <div>
        <a class="btn btn-default" asp-controller="Lijst" asp-action="LijstItemToevoegen" asp-route-id="@Model.LijstId">Item Toevoegen</a>
        <a class="btn btn-default" asp-action="Index">Terug naar lijsten</a>
        <input type="submit" value="Opslaan" class="btn btn-default" />
    </div>
</form>
