@model MySite.Models.Lijst

@{
    ViewData["Title"] = "Delete";
}

<h2>Verwijderen</h2>

<h3>Weet je zeker dat je deze lijst wilt verwijderen?</h3><hr />
<div>    
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            
            <input type="submit" value="Verwijder" class="btn btn-danger" /> |
            <a class="btn btn-default" asp-action="Index">Terug naar lijsten</a>  
        </div>
    </form>
</div>
